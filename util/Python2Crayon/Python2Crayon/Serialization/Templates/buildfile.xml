<build>
  <projectname>%%%PROJECT_NAME%%%</projectname>
  <source>source/</source>
  <output>output/%TARGET_NAME%</output>

  <spritesheets>
    <sheet id="everything">
      <prefix>images/</prefix>
    </sheet>
  </spritesheets>

  <target name="js_local">
    <platform>js</platform>
  </target>

  <target name="js_remote">
    <platform>js</platform>
    <jsfileprefix>%%%JS_PREFIX%%%</jsfileprefix>
  </target>

  <target name="windows">
    <platform>csopengl</platform>
  </target>

  <target name="javaawt">
    <platform>java</platform>
  </target>

  <target name="python">
    <platform>python</platform>
  </target>
</build>